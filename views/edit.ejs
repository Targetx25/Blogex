<%- include("./partials/header.ejs") %>
<body>
    <div class="d-flex flex-column min-vh-100">
    <div class="container-md create">
        <div class="flex-container">
            <h1 class="center-text">Edit Your Post</h1>
            <form action="/update/<%=id%>" method="post">
                <h2><label>Title:- </label></h2>
                <textarea class="form-control title mb-2" type="text" name="title" placeholder="Enter the title" required><%=titleName%></textarea>
                <h2><label>Publish By :-</label></h2>
                <textarea class="form-control author mb-2" type="text" name="author" placeholder="Enter Your Name" required><%=authorName%></textarea>
                <h2><label>Your Content:-</label></h2>
                <textarea class="form-control mb-2" type="text" name="content" placeholder="Write Your article here" rows="10" cols="50"><%=contentName%></textarea>
            
        </div>
        <button class="btn btn-success mt-2" type="submit">Update</button>
    </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    </div>
</body>
